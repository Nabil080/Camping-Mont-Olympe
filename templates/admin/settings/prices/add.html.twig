{% extends 'admin/settings/base.html.twig' %}

{% block title %}Ajout règle de tarif
{% endblock %}

{% block body %}
	<header class="mt-8 flex justify-center items-center gap-2">
		<h1 class="text-3xl">Ajout règle de prix
		</h1>
		<div class="group relative cursor-help">
			<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewbox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-info"><circle cx="12" cy="12" r="10"/><path d="M12 16v-4"/><path d="M12 8h.01"/></svg>
			<div class="hidden group-hover:block absolute bg-white border left-1/2 -translate-x-1/2 mt-4 border-black p-2 w-[300px]">
				Définissez des saisons et leurs périodes correspondantes.
				<br><br>
				Les saisons serviront pour les autres paramètres
			</div>
		</div>
	</header>
	<div class="text-center">
		<p class="">Ajout de règle pour
			{{ type is same as 'places' ? "l'emplacement" }}
			{{ type is same as 'services' ? "le service supplémentaire" }}
			{{ type is same as 'ages' ? "la tranche d'âge" }}
			{{ type is same as 'offers' ? "Offres" }}
			:
			{{ type_name }}
		</p>
	</div>

	<div class="container mx-auto my-8 max-w-[90vw]">


		<section id="add-form" class="grid grid-cols-2 max-h-[50vh]">

			<svg class="max-h-[50vh] w-full" viewbox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" fill="#000000">
				<g id="SVGRepo_bgCarrier" stroke-width="0"></g>
				<g id="SVGRepo_tracerCarrier" stroke-linecap="round" stroke-linejoin="round"></g>
				<g id="SVGRepo_iconCarrier">
					<g>
						<path fill="none" d="M0 0h24v24H0z"></path>
						<path d="M14 2a8 8 0 0 1 3.292 15.293A8 8 0 1 1 6.706 6.707 8.003 8.003 0 0 1 14 2zm-3 7H9v1a2.5 2.5 0 0 0-.164 4.995L9 15h2l.09.008a.5.5 0 0 1 0 .984L11 16H7v2h2v1h2v-1a2.5 2.5 0 0 0 .164-4.995L11 13H9l-.09-.008a.5.5 0 0 1 0-.984L9 12h4v-2h-2V9zm3-5a5.985 5.985 0 0 0-4.484 2.013 8 8 0 0 1 8.47 8.471A6 6 0 0 0 14 4z"></path>
					</g>
				</g>
			</svg>

			{{ form_start(form) }}
			{{form_widget(form)}}
			<button type="submit" class="g-button w-full" formnovalidate>
				Add Rule</button>
			{{ form_end(form) }}
		</section>

		<a href="{{ path('admin_settings_prices') }}">
			Retour à la liste
		</a>
	</div>
