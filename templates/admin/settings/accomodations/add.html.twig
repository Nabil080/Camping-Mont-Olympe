{% extends 'admin/settings/base.html.twig' %}
{% import 'macro/_svg.html.twig' as svg %}
{% set add = 'add' in app.request.pathInfo %}

{% block title %}
	{{ add ? "Ajout" : "Modification" }} accomodation
{% endblock %}

{% block body %}


	<header class="mt-8 flex justify-center items-center gap-2">
		<h1 class="text-3xl">{{ add ? "Ajout" : "Modification" }}
			d'accomodation
		</h1>
		<div class="group relative cursor-help">
			<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewbox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-info"><circle cx="12" cy="12" r="10"/><path d="M12 16v-4"/><path d="M12 8h.01"/></svg>
			<div class="hidden group-hover:block absolute bg-white border left-1/2 -translate-x-1/2 mt-4 border-black p-2 w-[300px]">
				Définissez des saisons et leurs périodes correspondantes.
				<br><br>
				Les saisons serviront pour les autres paramètres
			</div>
		</div>
	</header>

	<div class="container mx-auto my-8 max-w-[90vw]">


		<section class="grid grid-cols-2  [&>div]:grid [&>div]:mx-[10%] [&>div]: ">

			<div class="mx-auto my-auto">
				{{ svg.rules('w-3/4') }}
			</div>

			<div class="grid my-auto">
				{{ form_start(form) }}
				{{form_widget(form)}}
				<button type="submit" class="g-button w-full" >
					{{ add ? "Ajouter" : "Modifier" }}
					l'accomodation</button>
				{{ form_end(form) }}
			</div>
		</section>

		<div class="mt-8">
			<a href="{{ path('admin_settings_accomodations') }}">
				Retour à la liste
			</a>
		</div>
	</div>


{% endblock %}
